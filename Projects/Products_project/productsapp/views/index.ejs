<%- include('partials/header'); -%>

<html>
  <div class="text-center h2">Product List</div>

  <div class="container" style="margin-top: 50px;">
    <%if(products.length>0){%>
    <table class="table table-hovered">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>

        </tr>
      </thead>
      <tbody>
        <%products.forEach((product,index)=>{%>
        <tr>
          <th scope="row"><%=product.productID%></th>
          <td><img style="width:50px;height:50px" class="rounded-circle" src="assests/images/<%=product.productID%>.<%=product.image.split('.')[1]%>"></td>
          <td><%=product.title%></td>
          <td><%=product.category%></td>
          <td><%=product.quantity%></td>
          <td><%=product.price%></td>
          <td>
            <a href="/edit/<%=product.productID%>"  class="btn btn-success btn-sm">Edit</a>
            <a href="/delete/<%=product.productID%>" target="_blank" class="btn btn-danger btn-sm">Delete</a>

          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
    <%}else{%>
    <p class="text-center">
      No products found. Click <a href="/add">Here</a> to add new one
    </p>

    <%}%>
  </div>
</html>
